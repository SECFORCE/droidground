{
    "compilerOptions": {
      "allowJs": false,
      "alwaysStrict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "checkJs": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "jsx": "react-jsxdev",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "strict": true,
      "outDir": "dist",
      "module": "ESNext",
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "ES2020",
      "types": ["vite/client"],
      "resolveJsonModule": true,
  
      /* Custom Path */
      "paths": {
        "@server/*": ["./src/server/*"],
        "@shared/*": ["./src/shared/*"],
        "@client/*": ["./src/client/*"]
      }
    },
    "include": ["src/**/*", "server.ts", "node_modules/vite/types/*"],
    "ts-node": {
      "transpileOnly": true,
      "files": true,
      "require": ["tsconfig-paths/register"],
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "tsc-alias": {
      "verbose": false,
      "resolveFullPaths": true,
    }
  }
  